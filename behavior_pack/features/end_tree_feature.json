{
	"format_version": "1.15.0",
	"minecraft:tree_feature": {
		"description": {
			"identifier": "gaiawanderer:end_tree_feature"
		},
		"may_grow_on": [
			"minecraft:end_stone",
			"minecraft:grass"
		],
		"may_replace": [
			"minecraft:air",
			"minecraft:end_stone",
			"minecraft:obsidian",
			"minecraft:basalt",
			"minecraft:grass"
		],
		"acacia_trunk": {
			"trunk_block": {
				"name": "minecraft:basalt"
			},
			"trunk_width": 3,
			"trunk_height": {
				"base": 28,
				"intervals": [1, 12]
			},
			"trunk_lean": {
				"allow_diagonal_growth": true,
				"lean_height": {
					"range_min": 8,
					"range_max": 16
				},
				"lean_steps":{
					"range_min": 2,
					"range_max": 4
				}
			},
			"branches": {
				"branch_position":{
					"range_min": 2,
					"range_max": 6
				},
				"branch_chance": {
					"numerator": 3,
					"denominator": 4
				},
				"branch_length": {
					"range_min": 3,
					"range_max": 6
				},
				"branch_canopy": {
					"acacia_canopy": {
						"leaf_block": {
							"name": "minecraft:obsidian"
						},
						"canopy_size": 3
					}
				}
			},
			"trunk_decoration": {
				"decoration_block": "minecraft:glowstone",
				"decoration_chance": {
					"numerator": 1,
					"denominator": 100
				}
			}
		},
		"mega_canopy": {
			"leaf_block": {
				"name": "minecraft:obsidian"
			},
			"canopy_height": 4,
			 "base_radius": 8,
			 "core_width": 3
		}
	}
}