              ]
            }
          }
        ]
      },
      "rage": {
        "sequence": [
          {
            "run_command": {
              "command": "weather thunder"
            }
          },
          {
            "remove": {
              "component_groups": [
                "mode_calm"
              ]
            }
          },
          {
            "add": {
              "component_groups": [
                "mode_dive_attack"
              ]
            }
          }
        ]
      },
      "mode_change_by_dive": {
        "sequence" : [
          //mode change
          {
            "remove": {
              "component_groups": [
                "mode_dive_attack"
              ]
            }
          },
          {
            "add": {
              "component_groups": [
                "mode_swoop_attack"
              ]
            }
          },
          {
            "run_command": {
              "command": "summon gaiawanderer:thunder_bird_swoop"
            }
          }
        ]
      },
      "mode_change_by_swoop": {
        "sequence" : [
          //mode change
          {
            "remove": {
              "component_groups": [
                "mode_swoop_attack"
              ]
            }
          },
          {
            "add": {
              "component_groups": [
                "mode_dive_attack"
              ]
            }
          },
          {
            "run_command": {
              "command": "kill @e[type = gaiawanderer:thunder_bird_swoop, c = 1]"
