{
  "format_version": "1.16.100",
  "minecraft:entity": {
    "description": {
      "identifier": "gaiawanderer:elsalamander",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },

    // minecraft:variant => stun count
    // minecraft:mark_variant => mode value
    "component_groups": {
      "gaiawanderer:sleep": {
        "minecraft:mark_variant": {
          "value": 3
        },
        "minecraft:movement": {
          "value": 0.0
        },

        "minecraft:damage_sensor": {
          "triggers": [
            {
              "on_damage": {
                "event": "wakeup"
              }
            }
          ]
        }
      },
      "gaiawanderer:active": {
        "minecraft:boss": {
          "name": "entity.gaiawanderer:elsalamander.name"
        },
        "minecraft:behavior.look_at_player": {
          "priority": 7,
          "look_distance": 18.0,
          "probability": 0.02
        },
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 2,
          "within_radius": 64,
          "reselect_targets": false,
          "entity_types": [
            {
              "filters": {
                "any_of": [
                  { "test": "is_family", "subject": "other", "value": "player" },
                  { "test": "is_family", "subject": "other", "value": "snowgolem" },
                  { "test": "is_family", "subject": "other", "value": "irongolem" },
                  { "test": "is_family", "subject": "other", "operator": "!=", "value": "monster"}
                ],
                "all_of": [
                  { "test": "is_family", "subject": "other", "operator": "!=", "value": "inanimate"},
                  { "test": "is_family", "subject": "other", "operator": "!=", "value": "dolphin"},
                  { "test": "is_family", "subject": "other", "operator": "!=", "value": "fish"},
                  { "test": "is_family", "subject": "other", "operator": "!=", "value": "inanimate"}
                ]
              },
              "max_dist": 64
            }
          ],
          "must_see": true,
          "must_see_forget_duration": 10,
          "target_search_height": 80.0
        }
      },

      //Swoop attack mode
      // => All
      // val : 0
      "gaiawanderer:mode_explode":{

        "minecraft:collision_box": {
          "width": 3.95,
          "height": 4.65
        },
        "minecraft:behavior.melee_attack": {
          "priority": 3,
          "speed_multiplier": 1,
          "track_target": false
        },
        "minecraft:trail": {
          "block_type": "minecraft:fire"
        },
        "minecraft:attack": {
          "damage": 6
        },

        // "minecraft:explode": {
        //   "causes_fire": true,
        //   "fire_affected_by_griefing": true,
        //   "fuse_length": [0.25, 0.25],
        //   "fuse_lit": true,
        //   "power": 4
        // },
        "minecraft:mark_variant": {
          "value": 0
        },
        "minecraft:movement": {
          "value": 1.15
        },

        "minecraft:follow_range": {
          "value": 32,
          "max": 32
        },
        "minecraft:ageable": {
          "duration": 5,
          "grow_up": {
            "event": "mode_change",
            "target": "self"
          }
        }
      },
      //Shooting fire ball
      // => All
      // val : 1
      "gaiawanderer:mode_fireshot_attack": {

        "minecraft:collision_box": {
          "width": 3.95,
          "height": 2.65
        },
        "minecraft:mark_variant": {
          "value": 1
        },
        "minecraft:shooter": {
          "def": "minecraft:fireball"
        },
        "minecraft:behavior.ranged_attack": {
          "priority": 1,
          "attack_radius": 64,
          "charge_shoot_trigger": 0.2,
          "charge_charged_trigger": 0.15,
          "burst_shots": 1,
          "burst_interval": 0.3
        },
        "minecraft:movement": {
          "value": 0.08
        },
        "minecraft:follow_range": {
          "value": 64,
          "max": 64
        },
        "minecraft:ageable": {
          "duration": 5,
          "grow_up": {
            "event": "mode_change",
            "target": "self"
          }
        }
      },
      //Melee attack by power
      // => All
      // val : 2
      "gaiawanderer:mode_power_attack": {

        "minecraft:collision_box": {
          "width": 3.95,
          "height": 2.65
        },
        "minecraft:mark_variant": {
          "value": 2
        },

        "minecraft:attack": {
          "damage": 16
        },
        "minecraft:knockback_resistance": {
          "value": 2.0
        },
        "minecraft:jump.static": {
        },
        "minecraft:can_climb": {
        },
        "minecraft:behavior.delayed_attack": {
          "attack_duration": 1.2,
          "hit_delay_pct": 0.4333,
          "reach_multiplier": 16.5,
          "track_target": true
        },
        "minecraft:movement": {
          "value": 0.4
        },
        "minecraft:follow_range": {
          "value": 32,
          "max": 32
        },
        "minecraft:ageable": {
          "duration": 5,
          "grow_up": {
            "event": "mode_change",
            "target": "self"
          }
        }
      }
    },

    "components": {
      "minecraftï¼špersistent": {},
      "minecraft:fire_immune": true,
      "minecraft:mob_effect": {
        "entity_filter": {
          "all_of": [
            { "test": "is_family", "operator": "==", "subject": "other", "value": "player" }
          ]
        },
        "effect_range": 64,
        "effect_time": 60,
        "mob_effect": "mining_fatigue"
      },
      "minecraft:movement.basic": {
      },
      "minecraft:navigation.climb": {
        "is_amphibious": true,
        "can_pass_doors": false,
        "can_break_doors": false,
        "avoid_portals": false,
        "avoid_water": true
      },
      "minecraft:behavior.move_to_land": {

      },
      "minecraft:movement": {
        "value": 0.95
      },
      "minecraft:underwater_movement": {
        "value": 0.1
      },
      "minecraft:hurt_when_wet": {
        "value": true
      },
      "minecraft:fire_immune": true,
      "minecraft:physics": {
      },
      "minecraft:type_family": {
        "family": [ "elsalamander", "monster", "boss" ]
      },
      "minecraft:breathable": {
        "totalSupply": 15,
        "suffocateTime": 0
      },
      "minecraft:loot": {
        "table": ""
      },
      "minecraft:collision_box": {
        "width": 3.95,
        "height": 2.65
      },
      "minecraft:health": {
        "value": 200,
        "max": 200
      },
      "minecraft:scale": {
        "value": 0.7
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1
      },
      "minecraft:on_death": {
        "event": "death_event"
      }
    },

    "events": {
      "death_event": {
        "sequence": [
          {
            "run_command": {
              "command": "fill ~ ~ ~ ~ ~ ~ gaiawanderer:rocked_barrel"
            }
          },
          {
            "run_command": {
              "command": "fill ~ ~1 ~ ~ ~1 ~ chest"
            }
          },
          {
            "run_command": {
              "command": "replaceitem block ~ ~1 ~ slot.container 13 gaiawanderer:key"
            }
          },
          {
            "run_command": {
              "command":  "replaceitem block ~ ~1 ~ slot.container 0 shulker_box 1 1"
            }
          },
          {
            "run_command": {
              "command": "replaceitem block ~ ~1 ~ slot.container 1 shulker_box 1 14"
            }
          },
          {
            "run_command": {
              "command": "replaceitem block ~ ~1 ~ slot.container 2 gaiawanderer:burn_ingot 6"
            }
          },
          {
            "run_command": {
              "command": "replaceitem block ~ ~1 ~ slot.container 3 gaiawanderer:elsalamander_tail 1"
            }
          },
          {
            "run_command": {
              "command": "xp 100 @e[type = player]"
            }
          }
        ]
      },
      "minecraft:entity_spawned": {
        "sequence": [
          {
            "add": {
              "component_groups": [
                //"gaiawanderer:mode_explode",
                //"gaiawanderer:mode_flying",
                //"gaiawanderer:mode_power_attack",
                "gaiawanderer:sleep"
              ]
            }
          }
        ]
      },
      "wakeup": {
        "sequence": [
          {
            "remove": {
              "component_groups": [
                "gaiawanderer:sleep"
              ]
            }
          },
          {
            "add": {
              "component_groups": [
                "gaiawanderer:active",
                "gaiawanderer:mode_power_attack"
              ]
            }
          }
        ]
      },
      "mode_change": {
        "sequence" : [
          //mode change
          {
            "filters": {
              "test": "is_mark_variant",
              "value": "0"
            },
            "remove": {
              "component_groups": [
                "gaiawanderer:mode_explode"
              ]
            },
            "add": { }
          },
          {
            "filters": {
              "test": "is_mark_variant",
              "value": "1"
            },
            "remove": {
              "component_groups": [
                "gaiawanderer:mode_fireshot_attack"
              ]
            },
            "add": { }
          },
          {
            "filters": {
              "test": "is_mark_variant",
              "value": "2"
            },
            "remove": {
              "component_groups": [
                "gaiawanderer:mode_power_attack",
                "gaiawanderer:mode_ground"
              ]
            },
            "add": {
              "component_groups": [
                "gaiawanderer:mode_flying"
              ]
            }
          },

          {
            "randomize": [
              {
                "weight": 1,
//                "filters": { "test": "is_mark_variant","operator": "!=", "value": "0"},
                "add": {
                  "component_groups": [
                    "gaiawanderer:mode_explode"
                  ]
                }
              },
              {
                "weight": 1,
//                "filters": { "test": "is_mark_variant","operator": "!=", "value": "1"},
                "add": {
                  "component_groups": [
                    "gaiawanderer:mode_fireshot_attack"
                  ]
                }
              },
              {
                "weight": 1,
//                "filters": { "test": "is_mark_variant","operator": "!=", "value": "2"},
                "add": {
                  "component_groups": [
                    "gaiawanderer:mode_power_attack",
                    "gaiawanderer:mode_ground"
                  ]
                }
              }
            ]
          } 
        ]
      }
    }
  }
}
