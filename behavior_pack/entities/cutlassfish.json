{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "gaiawanderer:cutlassfish",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "become_bonefish": {
        "minecraft:transformation": {
          "into": "gaiawanderer:bonefish"
        }
      }
    },
    "components": {
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? 4 : 0"
      },
      "minecraft:type_family": {
        "family": [ "cutlassfish", "fish" ]
      },
      "minecraft:collision_box": {
        "width": 1.4,
        "height": 6.4
      },
      "minecraft:health": {
        "value": 18,
        "max": 18
      },

      "minecraft:loot": {
        "table": "loot_tables/entities/cutlassfish.json"
      },
      "minecraft:scale": {
        "value": 1.0
      },

      "minecraft:breathable": {
        "totalSupply": 0,
        "suffocateTime": 0,
        "breathesAir": false,
        "breathesWater": true
      },

      "minecraft:movement": {
        "value": 0.1
      },
      "minecraft:underwater_movement": {
        "value": 0.05
      },
      "minecraft:navigation.generic": { // Allows the mob to go through water
        "is_amphibious": false,
        "can_path_over_water": false,
        "can_swim": true,
        "can_walk": false,
        "can_breach": false,
        "can_sink": false
      },
      "minecraft:physics": {
        "has_gravity": false
      },
      "minecraft:movement.sway": {
        "sway_amplitude": 0.0
      },
      "minecraft:behavior.swim_idle": {
        "priority": 5
      },
      "minecraft:behavior.random_swim": { // Randomly selects points to go to, even in water
        "priority": 3,
        "speed_multiplier": 1.0,
        "xz_dist": 16,
        "y_dist": 4,
        "interval": 0
      },
      "minecraft:behavior.swim_wander": {
        "priority": 4,
        "speed_multiplier": 1.0,
        "interval": 10,
        "look_ahead": 2.0
      },

      "minecraft:behavior.avoid_mob_type": {
        "priority": 1,
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "player"
            },
            "max_dist": 6,
            "walk_speed_multiplier": 1.5,
            "sprint_speed_multiplier": 2.0
          }
        ]
      },
      "minecraft:nameable": {
      },
      "minecraft:damage_sensor": [
        {
          "on_damage": {
            "filters": {
              "any_of": [
                {"test": "is_family", "subject": "other", "operator": "!=", "value": "player"}
              ],
              "all_of": [
                {"test": "has_damage", "value": "fatal"}
              ]
            },
            "event": "become_bonefish"
          }
        }
      ],
      "minecraft:physics": {
        "has_gravity": false
      },
      "minecraft:on_death": {
        "event": "death_event"
      }
    },
    "events": {
      "death_event": {
        "randomize": [
          {
            "weight": 99
          },
          {
            "weight": 1,
            "run_command": {
              "command": "structure load mystructure:book_cutlassfish ~ ~ ~"
            }
          }
        ]
      },
      "become_bonefish": {
        "sequence": [
          {
            "add": {
              "component_groups": [
                "become_bonefish"
              ]
            }
          }
        ]
      }
    }
  }
}
