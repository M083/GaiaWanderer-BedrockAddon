{
  "format_version": "1.13.0",
  "minecraft:entity": {
    "description": {
      "identifier": "gaiawanderer:wyvern",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      //Swoop attack mode
      // => All
      // val : 0
      "gaiawanderer:mode_swoop_attack":{

        "minecraft:mark_variant": {
          "value": 0
        },
        "minecraft:attack": {
          "damage": 6
        },
        "minecraft:movement": {
          "value": 0.6
        },
        "minecraft:behavior.melee_attack": {
          "priority": 3,
          "target_dist": 1.2,
          "track_target": false,
          "reach_multiplier": 1.5,
          "look_distance": 30,
          "speed_multiplier": 1.0
        },
        "minecraft:behavior.avoid_mob_type": {
          "priority": 4,
          "entity_types":{
            "filters": {
              "any_of": [
                { "test": "is_family", "subject": "other", "operator": "!=", "value": "wyvern" }
              ]
            },
            "max_dist": 15,
            "walk_speed_multiplier": 2.25,
            "sprint_speed_multiplier": 2.75
          }
        },
        /*
        "minecraft:movement.glide": {
          "start_speed": 0.4,
          "speed_when_turning": 1.25
        },
        "minecraft:behavior.swoop_attack": {
          "priority": 2,
          "delay_range": [ 2.0, 3.5 ]
        },
        "minecraft:behavior.circle_around_anchor": {
          "priority": 3,
          "radius_range": [ 8.0, 12.0 ],
          "radius_change_chance": 250,
          "height_above_target_range": [ 12.0, 15.0 ],
          "height_offset_range": [ -1.0, 2.0 ],
          "height_change_chance": 350,
          "goal_radius": 1.25
        },
        */

        "minecraft:navigation.hover": {
          "can_path_over_water": true,
          "can_sink": false,
          "can_path_from_air": true,
          "avoid_water": true,
          "avoid_damage_blocks": true,
          "avoid_sun": false
        },
        "minecraft:behavior.random_hover": {
          "priority": 11,
          "xz_dist": 8,
          "y_dist": 12,
          "y_offset": -1,
          "interval": 1,
          "hover_height": [6, 12]
        },
        "minecraft:movement.hover": {},
        "minecraft:flying_speed": {
          "value": 0.3
        },
        "minecraft:follow_range": {
          "value": 32,
          "max": 32
        }
      },
      // => mode_swoop_attack
      // val : 1
      "gaiawanderer:mode_stun": {

        "minecraft:mark_variant": {
          "value": 1
        },
        "minecraft:ageable": {
          "duration": 10,
          "grow_up": {
            "event": "stun_recovery",
            "target": "self"
          }
        }
      },

      "gaiawanderer:stun_first": {
        "minecraft:variant": {
          "value": 2
        }
      },
      "gaiawanderer:stun_second": {
        "minecraft:variant": {
          "value": 1
        }
      },
      "gaiawanderer:stun_third": {
        "minecraft:variant": {
          "value": 0
        }
      },
      "gaiawanderer:default_stun_count": {
        "minecraft:variant": {
          "value": 3
        }
      },
      "gaiawanderer:stunable": {
        "minecraft:damage_sensor": {
          "on_damage": {
            "filters": { "test" : "has_damage", "value" : "projectile" },
            "event": "stun"
          }
        }
      },
      "gaiawanderer:mode_flying": {
        "minecraft:can_fly": {
        },
        "minecraft:fall_damage": {
          "value": 0.0
        },
        "minecraft:physics": {
          "has_gravity": false
        }
      },
      "gaiawanderer:mode_ground": {
        "minecraft:fall_damage": {
          "value": 0.0
        },
        "minecraft:physics": {
        },
        "minecraft:knockback_resistance": {
          "value": 0.0
        }
      }
    },

    "components": {
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? 11 : 0"
      },
      "minecraft:type_family": {
        "family": [ "wyvern", "monster" ]
      },
      "minecraft:fire_immune": true,
      "minecraft:breathable": {
        "totalSupply": 15,
        "suffocateTime": 0,
        "breathesLava": true
      },
      "minecraft:lava_movement": {
        "value": 0.32
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/wyvern.json"
      },
      "minecraft:collision_box": {
        "width": 1.95,
        "height": 1.25
      },
      "minecraft:behavior.look_at_player": {
        "priority": 7,
        "look_distance": 6.0,
        "probability": 0.02
      },
      "minecraft:health": {
        "value": 50,
        "max": 50
      },
      "minecraft:scale": {
        "value": 1.0
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "within_radius": 64,
        "reselect_targets": false,
        "entity_types": [
          {
            "filters": {
              "any_of": [
                { "test": "is_family", "subject": "other", "value": "player" },
                { "test": "is_family", "subject": "other", "value": "snowgolem" },
                { "test": "is_family", "subject": "other", "value": "irongolem" },
                { "test": "is_family", "subject": "other", "value": "undead"}
              ],
              "all_of": [
                { "test": "is_family", "subject": "other", "operator": "!=", "value": "inanimate"},
                { "test": "is_family", "subject": "other", "operator": "!=", "value": "dolphin"},
                { "test": "is_family", "subject": "other", "operator": "!=", "value": "fish"},
                { "test": "is_family", "subject": "other", "operator": "!=", "value": "hollow_salamander"},
                { "test": "is_family", "subject": "other", "operator": "!=", "value": "inanimate"}
              ]
            },
            "max_dist": 64
          }
        ],
        "must_see": true,
        "must_see_forget_duration": 10,
        "target_search_height": 80.0
      },
      "minecraft:on_death": {
        "event": "death_event"
      }
    },
    "events": {
      "death_event": {
        "randomize": [
          {
            "weight": 99
          },
          {
            "weight": 1,
            "run_command": {
              "command": "structure load mystructure:book_wyvern ~ ~ ~"
            }
          }
        ]
      },
      "minecraft:entity_spawned": {
        "sequence": [
          {
            "add": {
              "component_groups": [
                "gaiawanderer:mode_swoop_attack",
                "gaiawanderer:mode_flying",
                "gaiawanderer:stunable",
                "gaiawanderer:default_stun_count"
              ]
            }
          }
        ]
      },

      "stun": {
        "sequence": [
          //decrease stun count
          {
            "filters": { "test": "is_variant", "value": "3" },
            "remove": {
              "component_groups": [
                "gaiawanderer:default_stun_count"
              ]
            },
            "add": {
              "component_groups": [
                "gaiawanderer:stun_first"
              ]
            }
          },
          {
            "filters": { "test": "is_variant", "value": "2" },
            "remove": {
              "component_groups": [
                "gaiawanderer:stun_first"
              ]
            },
            "add": {
              "component_groups": [
                "gaiawanderer:stun_second"
              ]
            }
          },
          {
            "filters": { "test": "is_variant", "value": "1" },
            "remove": {
              "component_groups": [
                "gaiawanderer:stun_second"
              ]
            },
            "add": {
              "component_groups": [
                "gaiawanderer:stun_third"
              ]
            }
          },

          //mode change
          {
            "filters": {
              "test": "is_mark_variant",
              "value": "0"
            },
            "remove": {
              "component_groups": [
                "gaiawanderer:mode_swoop_attack"
              ]
            },
            "add": { }
          },

          //to stun
          {
            "add": {
              "component_groups": [
                "gaiawanderer:mode_stun",
                "gaiawanderer:mode_ground"
              ]
            },
            "remove": {
              "component_groups": [
                "gaiawanderer:stunable",
                "gaiawanderer:mode_flying"
              ]
            }
          }
        ]
      },

      "stun_recovery": {
        "sequence": [
          {
            "add": {
              "component_groups": [
                "gaiawanderer:mode_swoop_attack",
                "gaiawanderer:mode_flying"
              ]
            },
            "remove": {
              "component_groups": [
                "gaiawanderer:mode_stun",
                "gaiawanderer:mode_ground"
              ]
            }
          },
          {
            "filters": {
              "test": "is_variant",
              "operator": "!=",
              "value": "0"
            },
            "add": {
              "component_groups": [
                "gaiawanderer:stunable"
              ]
            }
          }
        ]
      }
    }
  }
}