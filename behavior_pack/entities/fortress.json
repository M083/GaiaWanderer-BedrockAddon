{
	"format_version": "1.16.100",
	"minecraft:entity": {
		"description": {
			"identifier": "gaiawanderer:fortress",
			"is_spawnable": false,
			"is_summonable": true,
			"is_experimental": false
		},
		"component_groups": {
            "despawn": {
                "minecraft:instant_despawn": {}
            }
		},
		"components": {
			"minecraft:physics": {},
			"minecraft:collision_box": {
				"width": 7,
				"height": 8.5
			},

	        "minecraft:environment_sensor": {
	          "triggers":[
	            {
	              "filters": {"test": "is_riding", "operator": "!=" },
	              "event": "despawn_event"
	            }
	          ]
	        },
			"minecraft:damage_sensor": {
				"triggers": [
					{
						"on_damage": {
							"filters": {
								"any_of": [
									{"test": "has_damage", "value": "projectile"},
									{"test": "has_damage", "value": "entity_explosion"},
									{"test": "has_damage", "value": "block_explosion"}
								]
							}
						},
						"deals_damage": false
					}
				]
			},
			"minecraft:type_family": {
				"family": [ "fortress", "fortresscancer", "necrocancer", "monster", "arthropod", "boss" ]
			},
			"minecraft:health": {
				"value": 100,
				"max": 100
			},
			"minecraft:movement": {
       			"value": 0
      		},
			"minecraft:boss": {
				"name": "entity.gaiawanderer:fortress.name"
			}
		},
        "events": {
            "despawn_event": {
                "add": {
                    "component_groups": [
                        "despawn"
                    ]
                }
            }
        }
	}
}